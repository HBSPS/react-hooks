{
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/stories",
    "**/**/*.test.ts",
    "**/**/*.test.tsx"
  ],
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"],
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
